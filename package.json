    "typescript",
    "hooks",
    "context",
    "ui",
    "headless",
    "manager"
  ],
  "author": "Alexandre Joly (https://alexandrejoly.me)",
  "license": "ISC",
  "packageManager": "pnpm@10.12.4",
  "peerDependencies": {
    "react": ">=16.8.0",
    "react-dom": ">=16.8.0"
  },
  "devDependencies": {
    "@types/react": "^18.0.0",
    "@types/react-dom": "^18.0.0",
    "typescript": "^5.0.0"
  }
