{
  "name": "react-easy-modals",
  "version": "1.5.0",
  "type": "module",
  "description": "A simple, flexible, headless, zero-dependency modal stack manager for React.",
  "homepage": "https://react-easy-modals-docs.vercel.app/",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js",
      "require": "./dist/index.js"
    }
  },
  "files": [
    "dist/**/*"
  ],
  "scripts": {
    "build": "tsc",
    "prepublishOnly": "npm run build",
    "test": "echo \"Error: no test specified\" && exit 1",
    "release": "release-it"
  },
  "keywords": [
    "react",
    "modal",
    "typescript",
    "hooks",
    "dialog",
    "ui",
    "headless",
    "manager",
    "promise"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/AlexDemzz/react-easy-modals.git"
  },
  "license": "MIT",
  "author": {
    "name": "Alexandre Joly",
    "url": "https://github.com/AlexDemzz"
  },
  "packageManager": "pnpm@10.12.4",
  "peerDependencies": {
    "react": ">=16.8.0",
    "react-dom": ">=16.8.0"
  },
  "devDependencies": {
    "@types/react": "^18.0.0",
    "@types/react-dom": "^18.0.0",
    "release-it": "^19.0.3",
    "typescript": "^5.0.0"
  },
  "release-it": {
    "$schema": "https://unpkg.com/release-it/schema/release-it.json",
    "github": {
      "release": true
    },
    "npm": {
      "publish": false
    }
  }
}
